#include <stdio.h>
#include <stdlib.h>
#include <pthread.h>

void *b_l(void *arg){
    int **int_ptr = (int **)arg;
    *int_ptr = calloc(1, sizeof(int));
    **int_ptr = 10;
    return NULL;
}


int main(int argc, char** argv){
    pthread_t  p1;
    int *result = NULL;
    pthread_create(&p1, NULL, b_l, &result);
    printf("%d\n", *result);
    return 0;
}
